# CoffPOS Railway Production Environment Configuration
# Set these as environment variables in Railway dashboard

# Application Configuration
APP_NAME="CoffPOS"
APP_ENV=production
APP_KEY=base64:YOUR_APP_KEY_HERE
APP_DEBUG=false
APP_URL=https://your-domain.railway.app

# Logging Configuration
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration (Railway PostgreSQL)
# Railway automatically injects these variables:
# PGHOST, PGPORT, PGDATABASE, PGUSER, PGPASSWORD
DB_CONNECTION=pgsql
DB_HOST=${PGHOST}
DB_PORT=${PGPORT}
DB_DATABASE=${PGDATABASE}
DB_USERNAME=${PGUSER}
DB_PASSWORD=${PGPASSWORD}

# Cache Configuration (Use database instead of Redis for simplicity)
BROADCAST_DRIVER=log
CACHE_DRIVER=database
FILESYSTEM_DISK=public
QUEUE_CONNECTION=database
SESSION_DRIVER=database
SESSION_LIFETIME=120

# Mail Configuration (Optional)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 Configuration (Recommended for Railway)
# Set these if using S3 for file storage
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_DEFAULT_REGION=ap-southeast-1
AWS_BUCKET=your-bucket-name
AWS_USE_PATH_STYLE_ENDPOINT=false

# Company Information
COMPANY_NAME="Your Coffee Shop Name"
COMPANY_ADDRESS="Jl. Example Street No. 123, Jakarta 12345"
COMPANY_PHONE="+62-21-1234-5678"
COMPANY_EMAIL="info@your-domain.com"
COMPANY_WEBSITE="www.your-domain.com"
COMPANY_TAX_ID="12.345.678.9-012.000"

# Business Configuration
BUSINESS_CURRENCY_CODE=IDR
BUSINESS_CURRENCY_SYMBOL=Rp
BUSINESS_TAX_RATE=10
BUSINESS_TAX_INCLUDED=false

# Loyalty Program Configuration
LOYALTY_POINTS_PER_RUPIAH=0.001
LOYALTY_REDEMPTION_RATE=0.1
LOYALTY_MINIMUM_REDEMPTION=100

# Feature Toggles
FEATURE_LOYALTY=true
FEATURE_MULTI_CURRENCY=false
FEATURE_INVENTORY=true
FEATURE_ADVANCED_REPORTS=true
FEATURE_EMAIL_RECEIPTS=false
FEATURE_SMS_NOTIFICATIONS=false

# Security Configuration
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# Midtrans Configuration (Production)
MIDTRANS_SERVER_KEY=your-production-server-key
MIDTRANS_CLIENT_KEY=your-production-client-key
MIDTRANS_IS_PRODUCTION=true
MIDTRANS_IS_SANITIZED=true
MIDTRANS_IS_3DS=true

# Google OAuth Configuration (Production)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URL=https://your-domain.railway.app/auth/google/callback